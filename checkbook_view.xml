<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="1">

    <record model="ir.ui.view" id="view_account_issued_check_form1">
        <field name="name">account.issued.check.form1</field>
        <field name="model">account.issued.check</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="l10n_ar_account_check.view_account_issued_check_form"/>
        <field name="arch" type="xml">
			<field name="receiving_partner_id" position="before">
				<field name="check_id" on_change="on_change_check_id(check_id)" domain="[('state','=','draft')]"/>
			</field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_issued_check_form2">
        <field name="name">account.issued.check.form2</field>
        <field name="model">account.issued.check</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="l10n_ar_account_check.view_account_issued_check_form"/>
        <field name="arch" type="xml">
            <field name="number" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_account_issued_check_tree1">
        <field name="name">account.issued.check.tree1</field>
        <field name="model">account.issued.check</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="l10n_ar_account_check.view_account_issued_check_tree"/>
        <field name="arch" type="xml">
			<field name="receiving_partner_id" position="before">
				<field name="check_id"/>
			</field>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_account_issued_check_tree2">
        <field name="name">account.issued.check.tree2</field>
        <field name="model">account.issued.check</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="l10n_ar_account_check.view_account_issued_check_tree"/>
        <field name="arch" type="xml">
			<field name="number" position="replace"></field>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_account_checkbook_tree">
		<field name="name">account_checkbook.tree</field>
		<field name="model">account.checkbook</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Checkbooks">
				<field name="name"/>
				<field name="bank_id"/>
				<field name="bank_account_id"/>
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_account_checkbook_form">
		<field name="name">account.checkbook.form</field>
		<field name="model">account.checkbook</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Checkbook">
				<separator string="Configuration" colspan="4" />
				<field name="name"/>
				<field name="bank_id"/>
				<field name="bank_account_id"/>
				<field name="check_ids" nolabel="1" colspan="4"/>
				<field name="issued_check_ids" nolabel="1" colspan="4"/>
			</form>
		</field>
	</record>
	
	<record model="ir.actions.act_window" id="action_account_checkbook">
		<field name="name">Checkbooks</field>
		<field name="res_model">account.checkbook</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem
		action="action_account_checkbook"
		id="menu_checkbook"
		name="Checkbooks"
		parent="l10n_ar_account_check.menu_treasury_check"
	/>

</data>
</openerp>
